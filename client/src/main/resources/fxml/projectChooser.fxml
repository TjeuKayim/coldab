    Create New Project
  </Button>
  <Button onAction="#refreshProjects" GridPane.columnIndex="1">
    Refresh
  </Button>
  <ListView fx:id="projectsListView" GridPane.rowIndex="1" GridPane.columnSpan="2"/>
</GridPane>
